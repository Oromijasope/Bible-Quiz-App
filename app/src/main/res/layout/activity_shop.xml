<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_quiz"
    tools:context=".ShopActivity">

    <RelativeLayout
        android:background="#00468C"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" >

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/arrow"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/round_back_blue"
            android:layout_marginStart="@dimen/_160sdp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/musicIcon"
                android:padding="12dp"
                android:src="@drawable/ic_dollar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_80sdp"
                android:text="100"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:id="@+id/coinText"/>

        </RelativeLayout>


    </RelativeLayout>


    
    <RelativeLayout
        android:id="@+id/buyCoin"
        android:background="@drawable/round_back_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/ic_dollar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:text="X 100"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/_160sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_60sdp"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>